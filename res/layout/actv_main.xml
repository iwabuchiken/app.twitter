<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main_actv_512x512"
    android:orientation="vertical" >
     
    <!-- Twitter Login Button -->

    <Button
        android:id="@+id/btnLoginTwitter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:text="Login with Twitter"
        android:textSize="25sp" />
     
    <!-- user name label -->
 
    <!-- label update status -->
     
    <!-- Tweet EditText -->
     
    <!-- Tweet Button -->

    <Button
        android:id="@+id/btnTweet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="Tweet"
        android:textSize="25sp"
        android:visibility="gone" />
     
    <!-- Timeline Button -->

    <Button
        android:id="@+id/btnTimeLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="@string/btn_lbl_time_line"
        android:textSize="25sp"
        android:visibility="gone" />
     
    <!-- Twitter Logout button -->

    <Button
        android:id="@+id/btnLogoutTwitter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="50dip"
        android:text="Logout from Twitter"
        android:textSize="25sp"
        android:visibility="gone" />
 
</LinearLayout>